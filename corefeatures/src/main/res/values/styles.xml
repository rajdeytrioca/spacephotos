<resources>
    <style name="SpacePhotos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dls_accent1</item>
        <item name="colorPrimaryVariant">@color/dls_accent2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="app_editbox" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/textbackground</item>
        <item name="android:textColorHint">@color/dls_secondary1</item>
        <item name="android:textColor">@color/dls_accent1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/dls_accent1</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>